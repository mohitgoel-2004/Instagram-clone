<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Instagram Clone</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
            
        }
        body {
            background-color: #000;
            color: #fff;
        }
        .header {
            position: fixed;
            top: 0;
            width: 100%;
            background-color: #000;
            border-bottom: 1px solid #333;
            padding: 10px 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            z-index: 100;
        }
        .logo {
            font-family: 'Billabong', cursive;
            font-size: 24px;
            font-weight: 600;
            color: #fff;
        }
        .icons {
            display: flex;
            gap: 20px;
        }
        .icons i {
            color: #fff;
        }
        .stories {
            display: flex;
            padding: 15px;
            overflow-x: auto;
            background-color: #000;
            border-bottom: 1px solid #333;
            margin-top: 50px;
            gap: 15px;
        }
        .story {
            display: flex;
            flex-direction: column;
            align-items: center;
            flex-shrink: 0;
        }
        .story-circle {
            width: 66px;
            height: 66px;
            border-radius: 50%;
            background: linear-gradient(45deg, #f09433, #e6683c, #dc2743, #cc2366, #bc1888);
            padding: 2px;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
        }
        .story-inner {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            border: 2px solid #000;
            overflow: hidden;
            background-color: #000;
        }
        .story img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        .story-username {
            margin-top: 5px;
            font-size: 12px;
            max-width: 70px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            color: #fff;
        }
        .add-story {
            position: absolute;
            bottom: -2px;
            right: -2px;
            background-color: #0095f6;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            border: 2px solid #000;
        }
        .add-story i {
            font-size: 12px;
            color: #fff;
        }
        .post {
            margin-bottom: 20px;
            background-color: #000;
            border: 1px solid #333;
        }
        .post-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 14px 16px;
        }
        .post-user {
            display: flex;
            align-items: center;
            gap: 10px;
            color: #fff;
        }
        .post-user img {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            object-fit: cover;
        }
        .post-image {
            width: 100%;
            height: auto;
        }
        .post-actions {
            display: flex;
            justify-content: space-between;
            padding: 10px 16px;
        }
        .post-actions-left {
            display: flex;
            gap: 16px;
        }
        .post-actions i {
            color: #fff;
            font-size: 24px;
        }
        .post-likes {
            padding: 0 16px;
            font-weight: 600;
            font-size: 14px;
            margin-bottom: 8px;
            color: #fff;
        }
        .post-caption {
            padding: 0 16px;
            font-size: 14px;
            margin-bottom: 8px;
            color: #fff;
        }
        .post-comments {
            padding: 0 16px;
            color: #8e8e8e;
            font-size: 14px;
            margin-bottom: 8px;
        }
        .post-time {
            padding: 0 16px;
            color: #8e8e8e;
            font-size: 10px;
            text-transform: uppercase;
            margin-bottom: 16px;
        }
        .navigation {
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: #000;
            border-top: 1px solid #333;
            display: flex;
            justify-content: space-around;
            padding: 12px 0;
        }
        .navigation i {
            color: #fff;
            font-size: 24px;
        }
        .navigation img {
            width: 24px;
            height: 24px;
            border-radius: 50%;
            object-fit: cover;
        }
        .no-scrollbar::-webkit-scrollbar {
            display: none;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <div class="header">
        <div class="logo">Instagram</div>
        <div class="icons">
            <i class="ri-heart-3-line"></i>
            <i class="ri-messenger-line"></i>
        </div>
    </div>

    <!-- Stories -->
    <div class="stories no-scrollbar">
        <!-- Your Story -->
        <div class="story" id="yourStory">
            <div class="story-circle">
                <div class="story-inner">
                    <img src="https://via.placeholder.com/150" alt="Your story">
                </div>
                <div class="add-story">
                    <i class="ri-add-line"></i>
                </div>
            </div>
            <div class="story-username">Your Story</div>
        </div>
        
        <!-- Sample Stories (replace with actual data) -->
        <% for(let i=0; i<8; i++) { %>
        <div class="story">
            <div class="story-circle">
                <div class="story-inner">
                    <img src="https://randomuser.me/api/portraits/women/<%= i+10 %>.jpg" alt="User story">
                </div>
            </div>
            <div class="story-username">user<%= i+1 %></div>
        </div>
        <% } %>
    </div>

    <!-- Posts -->
    <div style="margin-bottom: 60px;">
        <!-- Sample Post 1 -->
        <div class="post">
            <div class="post-header">
                <div class="post-user">
                    <img src="https://randomuser.me/api/portraits/women/11.jpg" alt="User">
                    <span>user1</span>
                </div>
                <i class="ri-more-2-fill"></i>
            </div>
            <img class="post-image" src="https://source.unsplash.com/random/500x500/?nature" alt="Post">
            <div class="post-actions">
             <div class="post-actions-left">
                    <i class="ri-heart-3-line" style="font-size: 24px;"></i>
                    <i class="ri-chat-3-line" style="font-size: 24px;"></i>
                    <i class="ri-send-plane-line" style="font-size: 24px;"></i>
                </div>
                <i class="ri-bookmark-line" style="font-size: 24px;"></i>
            </div>
            <div class="post-likes">1,234 likes</div>
            <div class="post-caption">
                <strong>user1</strong> This is a sample caption for the post. #instagram #clone
            </div>
            <div class="post-comments">View all 24 comments</div>
            <div class="post-time">2 hours ago</div>
        </div>
        
          <!-- Sample Post 2 -->
        <div class="post">
            <div class="post-header">
                <div class="post-user">
                    <img src="https://randomuser.me/api/portraits/men/12.jpg" alt="User">
                    <span>user2</span>
                </div>
                <i class="ri-more-2-fill"></i>
            </div>
            <img class="post-image" src="https://source.unsplash.com/random/500x500/?city" alt="Post">
            <div class="post-actions">
              <div class="post-actions-left">
                    <i class="ri-heart-3-line" style="font-size: 24px;"></i>
                    <i class="ri-chat-3-line" style="font-size: 24px;"></i>
                    <i class="ri-send-plane-line" style="font-size: 24px;"></i>
                </div>
                <i class="ri-bookmark-line" style="font-size: 24px;"></i>
            </div>
            <div class="post-likes">567 likes</div>
            <div class="post-caption">
                <strong>user2</strong> Another sample post for the Instagram clone. #webdev #frontend
            </div>
            <div class="post-comments">View all 12 comments</div>
            <div class="post-time">4 hours ago</div>
        </div>
    </div>

    <!-- Bottom Navigation -->
<div class="navigation">
    <a href="/feed" class="nav-item"><i class="ri-home-4-fill"></i></a>
    <a href="/search" class="nav-item"><i class="ri-search-line"></i></a>
    <a href="/upload" class="nav-item"><i class="ri-add-box-line"></i></a>
    <!-- <a href="/activity" class="nav-item"><i class="ri-heart-3-line"></i></a> -->
    <a href="/profile" class="nav-item"><img src="/images/uploads/<%= user.picture || 'default-profile.jpg' %>" alt="Profile" onerror="this.src='/images/default-profile.jpg'"></a>
</div>

<style>
    .navigation {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        background-color: #000;
        border-top: 1px solid #333;
        display: flex;
        justify-content: space-around;
        padding: 12px 0;
        z-index: 1000;
    }
    
    .nav-item {
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        text-decoration: none;
    }
    
    .nav-item i {
        font-size: 24px;
    }
    
    .nav-item img {
        width: 24px;
        height: 24px;
        border-radius: 50%;
        object-fit: cover;
        border: 1px solid #333;
    }
    
    /* Active state */
    .nav-item.active i {
        color: #0095f6;
    }
</style>


    <script>
        // Your Story functionality
         // Highlight current page in navigation
    document.addEventListener('DOMContentLoaded', function() {
        const currentPath = window.location.pathname;
        const navItems = document.querySelectorAll('.nav-item');
        
        navItems.forEach(item => {
            const href = item.getAttribute('href');
            if (currentPath.startsWith(href)) {
                item.classList.add('active');
            }
        });
    });
        document.getElementById('yourStory').addEventListener('click', function() {
            // Open file input for story upload
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = 'image/*,video/*';
            
            input.onchange = (e) => {
                const file = e.target.files[0];
                if (file) {
                    // Here you would typically upload the story to your server
                    alert('Story uploaded! (This would actually upload to your server)');
                    
                    // Update the story preview
                    const reader = new FileReader();
                    reader.onload = (event) => {
                        document.querySelector('#yourStory .story-inner img').src = event.target.result;
                    };
                    reader.readAsDataURL(file);
                }
            };
            
            input.click();
        });

        // Like button functionality
        document.querySelectorAll('.like-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                if (this.classList.contains('ri-heart-3-line')) {
                    this.classList.remove('ri-heart-3-line');
                    this.classList.add('ri-heart-3-fill', 'text-red-500');
                } else {
                    this.classList.remove('ri-heart-3-fill', 'text-red-500');
                    this.classList.add('ri-heart-3-line');
                }
            });
        });

        // Save button functionality
        document.querySelectorAll('.save-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                if (this.classList.contains('ri-bookmark-line')) {
                    this.classList.remove('ri-bookmark-line');
                    this.classList.add('ri-bookmark-fill');
                } else {
                    this.classList.remove('ri-bookmark-fill');
                    this.classList.add('ri-bookmark-line');
                }
            });
        });
    </script>
</body>
</html>